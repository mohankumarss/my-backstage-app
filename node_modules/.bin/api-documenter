#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@microsoft/api-documenter/bin/api-documenter" "$@"
  ret=$?
else 
  node  "$basedir/../@microsoft/api-documenter/bin/api-documenter" "$@"
  ret=$?
fi
exit $ret
